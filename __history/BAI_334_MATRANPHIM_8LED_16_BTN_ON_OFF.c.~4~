#include <tv_pickit2_shift_1.c>
#include <tv_pickit2_shift_key4x4_138.c>
signed int8 mp, y;      //signed là bao nhieu den bao nhieu
void main()
{
set_up_port_ic_chot();
set_tris_b(0x3c); //RB2 - RB5
   while(true)
   {
      mp = key_4x4_dw();
      if(mp!=0xff)
         {
            delay_ms(200);    //giam toc do kt phim
            //xu li chuc nang
            if(mp == 0) y = 0x01|y;   //0000   0001   //|y là de khong mat led cu
            if(mp == 1) y = 0x02|y;   //0000   0010
            if(mp == 2) y = 0x04|y;   //0000   0100
            if(mp == 3) y = 0x08|y;   //0000   1000    
            if(mp == 4) y = 0x10|y;   
            if(mp == 5) y = 0x20|y;  
            if(mp == 6) y = 0x40|y;  
            if(mp == 7) y = 0x80|y;                
             xuat_32led_don_4byte(0, 0, 0, y);
         }
   }
}

