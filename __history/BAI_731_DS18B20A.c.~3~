#INCLUDE <TV_PICKIT2_SHIFT_1.c>
#INCLUDE <TV_PICKIT2_SHIFT_DS18B20.c>  

VOID MAIN()
{
   SET_UP_PORT_IC_CHOT();
   KHOI_TAO_DS18B20();
   DS18A_TAM=0;
   XUAT_4LED_7DOAN_GIAIMA_XOA_SO0(0);
   WHILE(TRUE)
   {
      IF(TOUCH_PRESENT())   DOC_GIATRI_DS18B20();
         DS18A=DS18A>>4;
         DS18A=DS18A&0X0FF;
         XUAT_4LED_7DOAN_GIAIMA_XOA_SO0(DS18A);
      
   }
}
