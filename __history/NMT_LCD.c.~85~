   setup_lcd ();
   vitri1 = 0;
   vitri2 = 0;

   WHILE (true)
   {
      //lcd_command (0x80); //dia chi hang 1 lcd, trang 130 hoac coi thu vien
lcd_dich_trai(hang1);
      
      
      
