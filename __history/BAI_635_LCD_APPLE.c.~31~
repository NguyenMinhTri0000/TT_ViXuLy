
#include <tv_pickit2_shift_1.c>
//!#include <tv_pickit2_shift_1_proteus.c>
#include <tv_pickit2_shift_lcd.c>

const UNSIGNED char hang4[]={0x00,0x00,0x00,0x1E,0x1E,0x1E,0x1E,0x1E};     //hcn nho
//!0 0 0 0 0               0x00  
//!0 0 0 0 0               0x00  
//!0 0 0 0 0               0x00  
//!1 1 1 1 0               0×1E  
//!1 1 1 1 0               0×1E  
//!1 1 1 1 0               0×1E  
//!1 1 1 1 0               0×1E  

signed INT8 i, vitri_x, vitri_y, vitri_x1, vitri_y1;

void hien_hinh_vuong(int8 vitri_y, int8 vitri_x)
{
   lcd_command(0x50);      //vi tri dau trang 148
   FOR (i=0;i<8;i++) { lcd_data(hang4[i]); }       //0x40 luu hang2[0] 0x41 luu hang2[1]...
   lcd_GOTO_xy(vitri_y, vitri_x);       //vi tri tao ma   
   lcd_data(2);            //dia chi ki tu trang 148
}
void hien_cot_song_dien_thoai(int8 vitri_y1, int8 vitri_x1)
{

}
void main()
{
   set_up_port_ic_chot();
   setup_lcd();

   hien_hinh_vuong(1, 3); 

   hien_hinh_vuong(2, 3);
   hien_hinh_vuong(2, 2); 
     
   hien_hinh_vuong(3, 3);
   hien_hinh_vuong(3, 2);
   hien_hinh_vuong(3, 1);    
   WHILE(true);
}


